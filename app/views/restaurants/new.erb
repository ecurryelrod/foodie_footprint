<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>
<h2>Add a New Foodie Footprint</h2>
<form action="/restaurants" method="post">
    <h3>
        Restaurant Name: <input type="text" name="restaurant[name]">
        Type of Food: <input type="text" name="restaurant[food_type]">
    </h3>
    <br>
    <h3>City to Add Restaurant to: <input type="text" name="location[name]"></h3>
    <br>
    <button type="submit">Submit</button>
</form>
<br><br>
<a href="/locations"><button type="submit">Cancel</button></a> 
<a href="/logout"><button type="submit">Logout</button></a>