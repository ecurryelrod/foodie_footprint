<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>

<h2>Update Account Information</h2>

<form action="/users/<%= @user.id%>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
    Update Your Name: <input type="text" name="user[name]" value="<%= @user.name %>"><br><br>
    Update Your Username: <input type="text" name="user[username]" value="<%= @user.username %>"><br><br>
    Update Password: <input type="password" name="user[password]"><br><br>
    <button type="submit">Update</button>
    <button type="submit">Cancel</button>
</form>